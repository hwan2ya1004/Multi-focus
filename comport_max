				<script language="JavaScript">

					function calculatePay() {


					<!-- 2021년 04월 확인 크롬 정상 동작 -->


					var price1 = (new Function ('return '+ document.mypay.select1.value))();   // eval 보안 취약점으로  대체

					var price2 = eval(document.mypay.select2.value);

					var price3 = eval(document.mypay.select3.value);

					var price4 = eval(document.mypay.select4.value);

						

					document.mypay.pay.value = price1 + price2 + price3 + price4 ;

					}
					
					
				</script>
